 *= require_self
 *= require_tree .
*/

.inline {
  vertical-align: top;
  display: inline-block;
}

.notice {
  float: right;
  max-width: 25%;
  display: inline-block;
  background-color: rgb(225,242,254);
  border : 1px solid rgb(199,224,241);
  vertical-align: top;
}

.label {
  display: inline;
  padding: .2em .6em .3em;
  font-size: 75%;
  font-weight: 700;
  line-height: 1;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: .25em;
}
.label-danger{
  background-color: #999;
  color: rgb(194,54,52);
}
.label-danger[href]:focus, .label-danger[href]:hover{
  background-color: #999;
  color: rgb(194,54,52);
}

label > input[type="checkbox"], label > input[type="radio"] {
  vertical-align: middle;
}

fieldset li {
  padding: .2em .6em .3em;
}

fieldset .actions .action.secondary {
  background: #fff;
}

fieldset tr:nth-child(odd) th,
fieldset tr:nth-child(odd) td {
  background: #f2f2f2;
}

.admin nav[role="navigation"] > ul > li > a.active {
  background: #456587;
  color: #fff;
  text-shadow: none;
}

nav[role="navigation"] .action.primary {
  color: #fff;
}
nav[role="navigation"] a.action.primary:hover {
  box-shadow: none;
}
header[role="banner"] nav[role="navigation"] a.action {
  position: inherit;
}

nav.actions ul {
  background-color: transparent;
  border: none;
}
.admin nav.actions li:last-child a {
  background-color: #f2f2f2;
  color: inherit;
}

