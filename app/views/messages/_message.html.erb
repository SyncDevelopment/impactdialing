<h1><%= @script.new_record? ? "New message" : "Edit message" %></h1>
<%= error_messages_for :script %>
<%= form_for @script, :url => messages_path, :html => {:name => 'messageForm', :id => 'messageForm', :multipart => true} do |f| %>
    <%= f.hidden_field :robo %>
    <p>
      <label>Message name</label>
      <%= f.text_field :name, {:class => "field"} %>
    </p>

    <fieldset>
      <legend>Audio</legend>

      <%= f.fields_for :robo_recordings do |recording| %>
          <p>
            <%= recording.label :name %>
            <%= recording.text_field :name %>
          </p>
          <% if recording.object.file.exists? %>
              <div>
                <embed type="application/x-shockwave-flash" wmode="transparent" height="27" width="320" src="http://www.google.com/reader/ui/3523697345-audio-player.swf?audioUrl=<%= recording.object.file.url %>"/>
              </div>
          <% end %>
          <p><%= recording.file_field :file %></p>
      <% end %>


    </fieldset>
    <p>&nbsp;</p>

    <div class="buttons"><%= button_tag 'Save' %></div>
<% end %>