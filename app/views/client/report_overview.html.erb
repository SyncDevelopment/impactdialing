<div class="box" style="width:600px;">
	<%= render :partial => 'boxtop', :locals=>{:title=>"Overview Report #{@campaign.name}"} %>
	<div class="box-content">
		
		
		<div class="table">
		    <table width="100%" border="0" cellspacing="0" cellpadding="0">
		      <tr>
		        <th>Status</th>
		        <th>Number</th>
		        <th>Percentage</th>
		      </tr>
			
				<% @records.each do |r| %>
				<tr class="<%= cycle("odd","even") %>">
					<td>
					<% if r[1].blank? %>Unanswered<% end %>
					<%= r[1] %></td>
					<td><%= r[0] %></td>
					<td><%= ((r[0].to_f/@total)*100).to_i %>%</td>
				</tr>
				<% end %>
		    </table>

		    <div class="pagging">
		   		<div class="left"><%= @total %> calls total</div>
		    </div>

		</div>
		
		<br/>
		
		<% if params[:type]!="1" %>
			<% if @totalvoters>0 %>
			<div class="table">
			    <table width="100%" border="0" cellspacing="0" cellpadding="0">
			      <tr>
			        <th>Type</th>
			        <th>Numbers</th>
			        <th>Percentage</th>
			      </tr>

					<tr class="odd">
						<td>Remaining Numbers</td>
						<td><%= @voters_to_call.length %></td>
						<td><%=@voters_to_call.length/@totalvoters*100  %></td>
					</tr>
					<tr class="event">
						<td>Finished Numbers</td>
						<td><%= @voters_called.length %></td>
						<td><%=@voters_called.length/@totalvoters*100  %>%</td>
					</tr>
			    </table>
			
			</div>
			<% end %>
		<% end %>

		
	</div>
</div>


