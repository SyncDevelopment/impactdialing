<% if params[:id].blank? %>

  <div class="box" style="width:600px;">
    <%= render :partial => 'shared/boxtop', :locals=>{:title=>"Choose a campaign"} %>
    <div class="box-content">
      <% @user.campaigns.each do |c| %>
        <a href="/client/report_real/<%= c.id %>"><%= c.name %></a><br/>
      <% end %>
    </div>
  </div>

<% else %>

  <div id="status">Loading...</div>
  <%= periodically_call_remote(:url => { :action => 'update_report_real', :id=>params[:id], :timeframe=>params[:timeframe] }, :update => 'status',  :frequency => '30')  %>
  <script>
    <%= remote_function(:url => { :action => 'update_report_real', :id=>params[:id] , :timeframe=>params[:timeframe]}, :update => 'status')  %>
  </script>
<% end %>

