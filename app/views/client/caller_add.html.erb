<%= error_messages_for :caller %>

	<h1><%= @label %></h1>


	<% form_for :caller do |f| -%>
		<fieldset>
	      <p>
	        <label>Name</label>
			<%= f.text_field :name, {:class=>"field"} %>
	      </p>
	      <p>
	        <label>Email</label>
			<%= f.text_field :email, {:class=>"field"} %>
	      </p>
	      <p>
	        <label>Password</label>
			<%= f.text_field :password, {:class=>"field"} %>
	      </p>
	      <p>
	        <label><%= f.check_box :multi_user%> &nbsp; Shared login?</label>

	      </p>
	    </fieldset>

		<div class="buttons">
		<button type="submit">Save</button>
		</div>
<% end -%>

