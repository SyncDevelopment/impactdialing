<% if params[:id].blank? %>
	<div class="box" style="width:600px;">
		<%= render :partial => 'boxtop', :locals=>{:title=>"Choose a campaign"} %>
		<div class="box-content">
			<% @user.campaigns.each do |c| %>
			<a href="/client/reports/<%= c.id %>"><%= c.name %></a><br/>
			<% end %>
		</div>
	</div>

<% else %>
<div class="box" style="width:600px;">
	<%= render :partial => 'boxtop', :locals=>{:title=>"Choose a report for #{@campaign.name}"} %>
	<div class="box-content">
		<a href="/client/report_overview?id=<%=  params[:id]%>">Overview Report</a><br/>
		<a href="/client/report_overview?id=<%=  params[:id]%>&type=1">Answered Call Report</a><br/>
		<a href="/client/report_realtime?id=<%=  params[:id]%>">Realtime Report</a>
	</div>
</div>

<% end %>