	<% if @user.new_record? %>
	<h1>Sign up free</h1>
	<% else %>
	<h1>My account</h1>
	<% end %>

<%= error_messages_for :user %>
		<% form_for :user do |f| -%>

		<fieldset>
		<p>By signing up, you agree to our <a href="<%= policies_path %>#terms" target="_blank">Terms of Service</a>.</p> 
	    <p>
			        <label>Your email</label>
					<%= f.text_field :email, {:class=>"field"} %>
			      </p>
				<% if @user==nil || !@user.new_record? %>
			    <p>
			      <label>Current password</label>
					<input type="password" class="field" name="exist_pw" value="<%= params[:exist_pw] %>">
			    </p>
				<% end %>
			      <p>
<!--			        <label>
						<% if !@user.new_record? %>New <% end %>password</label>
-->
						<label>
						<% if @user.new_record? %>
						Pick a password
						<% else %>
						New password
						<% end %>
						</label>

					<%# f.password_field :password, {:class=>"field"} %>
					<input class="field" id="user_password" name="user[new_password]" size="30" type="password" value="" />

			      </p>



				  <p>
			        <label>Your name<span></span></label>
					<input type="text" name="fullname" value="<%= params[:fullname]%>">
			      </p>
			    <p>
		        <label>Your phone</label>
				<%= f.text_field :phone, {:class=>"field"} %>
		      </p>

	<!--
	      <p>
	        <label><% if !@user.new_record? %>New <% end %>Password Confirmation <% if @user.new_record? %><span>(Required)</span><% end %></label>
			<%# f.password_field :password_confirmation, {:class=>"field"} %>
	      </p>-->
	<% if @user.new_record? && false %>
			<p>
        <label>	<input type="checkbox" name="tos" value="1" <% if params[:tos] %>checked<% end %>/> I agree to the <a href="<%= policies_path %>#terms" target="_blank">Terms of Service</a></label>

			</p>
			<% end %>
			<%# f.submit "submit", :disable_with => 'submiting...', :class=>"button" %>
				<% if !@user.new_record? %>
			<a href="/client/forgot">Forgot password?</a>
			<% end %>
		</fieldset>

		<div class="buttons">

			<% if @user.new_record? %>
			<button type="submit">Sign up</button>
			<% else %>
			<button type="submit">Save</button>
			<% end %>

		</div>

<% end -%>
