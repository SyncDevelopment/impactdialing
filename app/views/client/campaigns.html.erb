<div class="box">
	<%= render :partial => 'boxtop', :locals=>{:title=>"Campaigns"} %>
	<% if @campaigns.length==0 %>
		<div class="form">
	      <label>No campaigns entered.</label>
		</div>
  		<div class="box-content"> <a href="/client/campaign_add" class="add-button"><span>Add new Campaigns</span></a><div class="cl">&nbsp;</div></div>
	<% else %>
  <div class="table">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <th>Name</th>
        <th>Campaign ID</th>
        <th>Date Added</th>
        <th width="55" class="ac"></th>
      </tr>
	<% @campaigns.each do |c| %>
      <tr class="<%= cycle("odd","even") %>">
        <td><h3><a href="/client/campaign_view/<%= c.id %>"><%= c.name %></a></h3></td>
        <td><%= c.group_id %></td>
        <td><%= c.created_at.strftime("%m/%d/%Y") %></td>
        <td><a href="javascript:if(confirm('Are you sure you want to delete this caller?')) document.location.href='/client/campaign_delete/<%= c.id %>';" class="ico del">Delete</a>
	<!--<a href="/client/campaign_add/<%= c.id %>" class="ico edit">Edit</a>--></td>
      </tr>
	<% end %>

    </table>

    <!-- Pagging -->
    <div class="pagging">
   <div class="left"><%= page_entries_info @campaigns %></div>
      <div class="right"> <%= will_paginate @campaigns %>
	</div>
    </div>
    <!-- End Pagging -->
  </div>
  <!-- Table -->	<% end %>
  <div class="box-content"> <a href="/client/campaign_add" class="add-button"><span>Add new Campaign</span></a><div class="cl">&nbsp;</div></div>

</div>


