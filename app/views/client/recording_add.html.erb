<div class="box">
  <%= render :partial => 'shared/boxtop', :locals => {:title => "New Recording"} %>
  <div class="box-content">
    <% form_for @recording, :url => '/client/recording_add', :html => {:multipart => true} do |f| %>
      <%= hidden_field_tag :campaign_id, params[:campaign_id] %>
      <p>
        <label for="upload_file">Select a file: </label>
        <%= f.file_field :file %></p>
      <p>
        <label for="upload_file">Name: </label>
        <%= f.text_field :name %>
      </p>
      <br/>
      <%= submit_tag "Upload", :class=>"button", :onclick=>"this.value='uploading...';this.disabled = true;this.form.submit();" %>
    <% end %>
  </div>
</div>
