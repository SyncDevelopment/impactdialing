<h1>Archived callers</h1>
<% if @callers.empty? %>
  <p>No callers archived.</p>
<% else %>
  <table>
    <tr>
      <th>Name</th>
      <th>Date archived</th>
      <th width="55" class="ac"></th>
    </tr>
    <% @callers.each do |c| %>
      <tr>
        <td><strong><%= c.known_as %></strong></td>
        <td><%= c.updated_at.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Restore', restore_client_caller_path(c), :method => :patch %></td>
      </tr>
    <% end %>
  </table>
  <p><%= page_entries_info @callers %> <%= will_paginate @callers %></p>
<% end %>
