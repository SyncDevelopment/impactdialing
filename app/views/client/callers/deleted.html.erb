<h1>Deleted callers</h1>
<% if @callers.length==0 %>
  <div class="form">
    <label>No callers entered.</label>
  </div>
<% else %>
  <div class="table">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>PIN</th>
        <th>Multi-User</th>
        <th>Date Added</th>
        <th>Date Deleted</th>
        <th width="55" class="ac"></th>
      </tr>
      <% @callers.each do |c| %>
        <tr class="<%= cycle("odd","even") %>">
          <td><h3><a href="/client/caller_add/<%= c.id %>"><%= c.name %></a></h3></td>
          <td><%= c.email %></td>
          <td><%= c.pin %></td>
          <td><% if c.multi_user? %>Yes<% else %>No<% end %></td>
          <td><%= c.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= c.updated_at.strftime("%m/%d/%Y") %></td>
          <td>
            <% form_tag(client_caller_restore_path(c), :id => "restore-caller#{c.id}-form", :method => :put) do |f| %>
              <%= link_to 'Restore', 'javascript:void(0)', :onclick => "$('restore-caller#{c.id}-form').submit()" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
<p><%= page_entries_info @callers %> <%= will_paginate @callers %></p>
<p class="actions"><%= link_to 'Return to active callers', '/client/callers', :class => 'action primary' %></p>

