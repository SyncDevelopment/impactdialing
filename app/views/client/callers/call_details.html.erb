<h1><%= "#{@campaign.try(:name)} Answered Calls Report" %></h1>
<% if @campaign.nil? %>
  <p><%= "This caller has not called this campaign." %></p>
<% else %>
  <%= form_tag(call_details_client_caller_path(:id => params[:id]), :method => :get) do %>
    <%= select_tag 'campaign_id', options_from_collection_for_select(@campaigns, 'id', 'name', @campaign.id) %>
    <%= render :partial => 'shared/switch_campaign'%>
    <%= render :partial => 'answer_call_details'%>
    <%= render :partial => 'transfer_call_details'%>
     
    <h3>Date range:</h3>
    <%= render :partial => 'shared/date_picker_callers' %>    
    <div class="buttons">
      <button type="submit">Update</button>
    </div>            
  <% end %>

<% end %>
