<div role="main">
  <h1><%= "Answered Calls Report" %></h1>
  <h2>for <%= @caller.identity_name %> on <%= @campaign.try(:name) || 'N/A' %></h2>
  <% if @campaign.nil? %>
    <p><%= "This caller has not called this campaign." %></p>
  <% else %>
    <%= form_tag(call_details_client_caller_path(:id => params[:id]), :method => :get) do %>
      <%= select_tag 'campaign_id', options_for_select(@campaigns_data, selected: @campaign.id) %>
      <%= render 'shared/switch_campaign'%>
      <%= render 'shared/answer_call_details'%>
      <%= render 'shared/transfer_call_details'%>
      <%= render 'shared/date_picker_callers' %>
    <% end %>

  <% end %>
</div>
