  <h1>Reports</h1>
    <% if @account.campaigns.length==0 %>
      <tr><td>You haven't created any campaigns yet.</td></tr>
    <% else %>
      <table>
      <tr><th colspan="7">Campaign</th></tr>
    <% end %>
    <% @campaigns.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><a href="<%= dials_client_reports_path(:campaign_id => c.id) %>">Dials</a></td>
        <td><a method="post" href="/client/reports/answer?campaign_id=<%= c.id %>" >Answered</a><br/></td>
        <td><a href="<%= usage_client_reports_path(:id => c.id) %>">Usage</a><br/></td>
        <td>Download report temporarily disabled pending bug fix; please contact support for your download</td>
<!--        <td><%= link_to "Download", download_client_campaign_reports_path(c) %><br/></td>  -->
      </tr>
    <% end %>
  </table>