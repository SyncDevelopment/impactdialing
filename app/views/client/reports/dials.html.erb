<div class="box" style="width:600px;">
	<%= render :partial => 'shared/boxtop', :locals=>{:title=>"#{@campaign.name} Dials"} %>
	<div class="box-content">
		<div class="table">
		    <table width="100%" border="0" cellspacing="0" cellpadding="0">
		      <tr>
		        <th width="300">Call status(Per Lead)</th>
		        <th>Dials</th>
		        <th>Percentage</th>
		      </tr>			
		      
		      <%= render partial: 'dial_row', locals: {row_title:"Answered", dial_count: sanitize_dials(@dials[CallAttempt::Status::SUCCESS]) + sanitize_dials(@dials['retry']) }%>
		      <%= render partial: 'dial_row', locals: {row_title:"No answer", dial_count: @dials[CallAttempt::Status::NOANSWER] }%>  
		      <%= render partial: 'dial_row', locals: {row_title:"Busy signal", dial_count: @dials[CallAttempt::Status::BUSY] }%>  		      
          <%= render partial: 'dial_row', locals: {row_title:"Answering machine", dial_count: @dials[CallAttempt::Status::HANGUP] }%>  		      
          <%= render partial: 'dial_row', locals: {row_title:"Voicemail left", dial_count: @dials[CallAttempt::Status::VOICEMAIL] }%>  		      
          <%= render partial: 'dial_row', locals: {row_title:"Failed", dial_count: @dials[CallAttempt::Status::FAILED] }%>  		      
          <%= render partial: 'dial_row', locals: {row_title:"Scheduled for later", dial_count: @dials[CallAttempt::Status::SCHEDULED] }%>  		                
          <%= render partial: 'dial_row', locals: {row_title:"Abandoned", dial_count: @dials[CallAttempt::Status::ABANDONED] }%>  		                      
          <%= render partial: 'dial_row', locals: {row_title:"Ringing", dial_count: @dials[CallAttempt::Status::RINGING] }%>
          <%= render partial: 'dial_row', locals: {row_title:"Ready to dial", dial_count: @ready_to_dial }%>
          <%= render partial: 'dial_row', locals: {row_title:"Not dialed", dial_count: @not_dialed }%>          
          <%= render partial: 'dial_row', locals: {row_title:"Total dials", dial_count: @total_dials }%>                    
		    </table>
		</div>
	</div>
</div>


<h3>Date range:</h3>
<% form_tag(dials_client_reports_path, :method => :get) do %>
 
  <table>
    <tr>
      <td>From:</td>
      <td> <%= unobtrusive_date_text_picker_tag :from_date,@from_date %> </td>
      </tr>
    <tr>
      <td>To:</td>
      <td>  <%= unobtrusive_date_text_picker_tag :to_date,@to_date %></td>
    </tr>
    </table>
     <input name="campaign_id" type="hidden" value="<%= params[:campaign_id]%>"></input>
  <div class="buttons"><button type="submit">Update date range</button></div>
<% end %>