<%= render :partial => 'shared/boxtop', :locals=>{:title=>"#{@campaign.name} Answered calls"} %>

<% @results.each_pair do |question, stats| %>
	  Question <%= question %>
	   <table width="100%" border="0" cellspacing="0" cellpadding="0">
	     <tr>
	       <th>Answer</th>
	       <th>Number</th>
	       <th>Percentage</th>
	     </tr>
       <% stats.each do |answers| %>
        <tr>
          <td><%= answers[:answer]%></td>
          <td><%= answers[:number]%></td>
          <td><%= answers[:percentage]%></td>
  	    </tr>
	      <% end %>
     </table>


<% end %>


	<h3>Date range:</h3>
	<% form_tag ("/client/report_overview_old?id=#{ params[:id]}&type=#{params[:type]}") do %>

	<table>
		<tr>
			<td>From:</td>
			<td> <%= unobtrusive_date_text_picker_tag :from_date,@from_date %> </td>
		</tr>
		<tr>
			<td>
				To:</td>
			<td>  <%= unobtrusive_date_text_picker_tag :to_date,@to_date %>
				</td>
		</tr>
	</table>
	<div class="buttons"><button type="submit">Update</button></div>
	<% end %>

