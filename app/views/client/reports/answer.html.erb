<%= render :partial => 'shared/boxtop', :locals=>{:title=>"#{@campaign.name} Answered Calls Report "} %>
<% i = 1 %>
<% @results.each_pair do |question, stats| %>
	  <h3>Question <%= i %>: <%= question %></h3>
	   <table width="100%" border="0" cellspacing="0" cellpadding="0">
	     <tr>
	       <th>Answer</th>
	       <th>Number</th>
	       <th>Percentage</th>
	     </tr>
       <% stats.each do |answers| %>
        <tr>
          <td><%= answers[:answer]%></td>
          <td><%= answers[:number]%></td>
          <td><%= answers[:percentage]%> %</td>
  	    </tr>
	      <% end %>
     </table>
     <% i = i + 1%>
<% end %>

<h3>Date range:</h3>
  <% form_tag(answer_client_reports_path, :method => :get) do %>
   
    <table>
      <tr>
        <td>From:</td>
        <td> <%= unobtrusive_date_text_picker_tag :from_date,@from_date %> </td>
        </tr>
      <tr>
        <td>To:</td>
        <td>  <%= unobtrusive_date_text_picker_tag :to_date,@to_date %></td>
      </tr>
      </table>
       <input name="campaign_id" type="hidden" value="<%= params[:campaign_id]%>"></input>
    <div class="buttons"><button type="submit">Update</button></div>
  <% end %>

