      <th width = 15%>Delete</th>
    </tr>
  </table>
  
  
    <table class="nested-fields possible_response">
      <tbody><tr>
        <td width="30%">
          <input id="script_questions_attributes_1339334137460_possible_responses_attributes_1339335954597_value" name="script[questions_attributes][1339334137460][possible_responses_attributes][1339335954597][value]" size="30" type="text">
        </td>
        <td width="30%">
          <input class="keypad" id="script_questions_attributes_1339334137460_possible_responses_attributes_1339335954597_keypad" name="script[questions_attributes][1339334137460][possible_responses_attributes][1339335954597][keypad]" size="30" type="text">
