        <td width="15%">
          <input name="script[questions_attributes][1339334137460][possible_responses_attributes][1339335954597][retry]" type="hidden" value="0"><input id="script_questions_attributes_1339334137460_possible_responses_attributes_1339335954597_retry" name="script[questions_attributes][1339334137460][possible_responses_attributes][1339335954597][retry]" type="checkbox" value="1">
        </td>
        <td width="15%">
          <input id="script_questions_attributes_1339334137460_possible_responses_attributes_1339335954597__destroy" name="script[questions_attributes][1339334137460][possible_responses_attributes][1339335954597][_destroy]" type="hidden"><a href="#" class="ico del remove_fields dynamic" data-removal-validation="possible_response_delete"></a>
