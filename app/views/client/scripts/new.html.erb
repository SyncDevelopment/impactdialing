<% content_for :javascripts do %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
<% end %>
<h1><%= @script.new_record? ? "New script" : "Edit script" %></h1>
<% if @script.errors.any? %>
  <fieldset>
    <%= error_messages_for :script %>
  </fieldset>
<% end %>
<%= nested_form_for [:client, @script] do |f| %>
    <%= f.hidden_field :robo %> 
      <p>
        <label>Script name</label>
        <%= f.text_field :name, {:class => "field"} %>
      </p>
      
      <fieldset>
        <legend>Display above script</legend>
        <ul class="clearfix">
          <% voter_fields = ["CustomID","FirstName","MiddleName","LastName","Suffix","Age","Gender","Phone","Email"] %>
          <% voter_fields.each do |field| %>
            <li>
              <input  type="checkbox" name="voter_field[]" value="<%= field %>" <% if @voter_field_values.try(:index, field) %>checked<% end %>>
                <%= field %>
              </input>
            </li>
          <% end %>
        </ul>
      </fieldset>
      
      <fieldset>
        <legend>Script</legend>
        <%= f.text_area :script %>
      </fieldset>
      <fieldset>
        <legend>Call results</legend>
        <% @script.questions.each_with_index do |question, index| %>
        <%= f.fields_for :questions, question do |q| %>
          <fieldset>
            <legend>Question <%= %></legend>
            <p>
              <label>Question:</label>
              <%= q.text_field :text%>
            </p>
                 <table>
                  <tr>
                    <th width = 30%>Response</th>
                    <th width = 30%>Phones-only keypad</th>
                    <th width = 15%>Retry</th>
                    <th width = 15%>Delete</th>
                  </tr>
                </table>
                <%= q.fields_for :possible_responses do |r| %>
                  <table>
                    <tr>
                      <td width = 30%>
                        <%= r.text_field :value %>
                      </td>
                      <td width = 30%>
                        <%= r.text_field :keypad %>
                      </td>
                      <td width = 15%>
                        <%= r.check_box :retry %>
                      </td>
                      <td width = 15%>
                        <%= r.link_to_remove " ", :class => "ico del" %>
                      </td>
                    </tr>
                  </table>
                <% end %>
                <%= q.link_to_add "New result", :possible_responses, :class => "action secondary"%>
                <%= q.link_to_remove "Delete this question", :class => "action secondary" , append_to: '' %>
            </p>
            </fieldset>
          <% end %>
          <% end %>

          <%= f.fields_for :notes do |n| %>
            <fieldset>
              <legend>Note <%=  %></legend>
              <%= n.text_field :note %>
              <p class = "actions">
                <%= n.link_to_remove " Delete this note", :class => "action secondary"  %>
              </p>
            </fieldset>            
          <% end %>
        <p class = "actions">
          <%= f.link_to_add "Add a question", :questions, :class => "action secondary" %>
          
          <%= f.link_to_add "Add a note", :notes, :class => "action secondary" %>
        </p>
        
      </fieldset>
    <div class= "buttons">
      <button type="submit">Save</button>
    </div>

<% end %>
