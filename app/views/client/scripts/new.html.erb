<% content_for :javascripts do %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js" %>
    <script typ ="text/javascript">
      $(function() {
        $('#script_questions_attributes_0_possible_responses_attributes_0_value').val('No response');
      });
    </script>
<% end %>
<h1><%= @script.new_record? ? "New script" : "Edit script" %></h1>
<% if @script.errors.any? %>
  <div class = 'callout alert clearfix'>
    <%= error_messages_for :script %>
  </div>
<% end %>
<%= nested_form_for [:client, @script] do |f| %>
    <%= f.hidden_field :robo %>
      <p>
        <label>Script name</label>
        <%= f.text_field :name, {:class => "field"} %>
      </p>

      <fieldset>
        <legend>Display above script</legend>
        <ul class="clearfix">
          <% @voter_fields.try(:each) do |field| %>
            <li>
              <input  type="checkbox" name="voter_field[]" value="<%= field %>" <% if @voter_field_values.try(:index, field) %>checked<% end %>>
                <%= field %>
              </input>
            </li>
          <% end %>
        </ul>
      </fieldset>

      <fieldset>
        <legend>Script</legend>
        <%= f.text_area :script %>
      </fieldset>
      <fieldset>
        <legend>Call results</legend>
        <questions>
          <% @script.questions.each_with_index do |question, index| %>
          <%= f.fields_for :questions, question do |q| %>
            <fieldset>
              <legend>Question 1</legend>
              <p>
                <label>Question:</label>
                <nested_type type = 'questions'></nested_type>
                <%= q.text_field :text%>
              </p>
                   <table>
                    <tr>
                      <th width = 30%>Response</th>
                      <th width = 30%>Phones-only keypad</th>
                      <th width = 15%>Retry</th>
                      <th width = 15%>Delete</th>
                    </tr>
                  </table>
                  <p>
                  <%= q.fields_for :possible_responses do |r| %>
                    <table>
                      <tr>
                        <td width = 30%>
                          <%= r.text_field :value %>
                        </td>
                        <td width = 30%>
                          <%= r.text_field :keypad, :value => 1, :class =>"keypad" %>
                        </td>
                        <td width = 15%>
                          <%= r.check_box :retry %>
                        </td>
                        <td width = 15%>
                          <%= r.link_to_remove " ", :class => "ico del", :type => "possible_responses"%>
                        </td>
                      </tr>
                    </table>
                  <% end %>
                  <%= q.link_to_add "New response", :possible_responses, :class => "action secondary small_font", :type => "possible_responses"%>
                  <%= q.link_to_remove "Delete this question", :class => "action secondary small_font", :type => "questions"%></p>
              </p>
              </fieldset>
            <% end %>
            <% end %>
          </questions>
          <notes>
            <%= f.fields_for :notes do |n| %>
              <fieldset>
                <legend>Note</legend>
                <nested_type type = 'notes'></nested_type>
                <%= n.text_field :note %>
                <p class = "actions">
                  <%= n.link_to_remove " Delete this note", :class => "action secondary", :type => "notes"  %>
                </p>
              </fieldset>
            <% end %>
          </notes>
        <p class = "actions">
          <%= f.link_to_add "Add a question", :questions, :class => "action secondary", :type => "questions"%>

          <%= f.link_to_add "Add a note", :notes, :class => "action secondary", :type => "notes"%>

        </p>

      </fieldset>
    <div class= "buttons">
      <button type="submit">Save</button>
    </div>

<% end %>
