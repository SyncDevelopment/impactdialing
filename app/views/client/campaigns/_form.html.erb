<%= content_for :javascripts do %>
  <%= javascript_include_tag 'campaign/campaign', 'campaign/voter_lists', 'form_helpers/grouped_selects' %>
  <%= javascript_include_tag 'campaigns/list_upload_form' %>

  <script type="text/javascript">
    $(function(){
      campaign = new Campaign();
      $('#campaign-tabs').tabs();
      $('#campaign-tabs').show();
    });
  </script>
<% end %>

<div id="dial-info" class="sidebar-right">
  <h3>Info</h3>
  <div>
    <% if dials_summary.present? %>
      <%= dials_summary %>
    <% else %>
      <p>This will display once the campaign is saved.</p>
    <% end %>
  </div>
</div>

<div class="main-content">
  <%= render "shared/error_messages", :target => @campaign %>

  <div id="campaign-tabs" style="display: none;">
    <ul>
      <li><a href="#settings">Settings</a></li>
      <li><a href="#upload">Upload</a></li>
      <li><a href="#upload-history">Upload history</a></li>
    </ul>

    <div id="settings" style="display: none;">
      <h4>Settings</h4>
      <%= render 'settings' %>
    </div>

    <div id="upload" style="display: none;">
      <%= render 'upload_form' %>
    </div>

    <div id="upload-history" style="display: none;">
      <%= render 'upload_history' %>
    </div>
  </div>
</div>
