<h1>New campaign</h1>
<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js" %>
<div id="callerid"></div>

<%= form_for @campaign,  url:  "#{client_campaigns_path}/#{@campaign.id}", :html => {:name => 'callerForm', :id => 'callerForm'} do |f| %>
    <%= render "shared/error_messages", :target => @campaign %>
    <fieldset>
    <%= hidden_field_tag :id, @campaign.id,{:class=>"field"} %>
	  <legend>Campaign options</legend>
      <fieldset>
        <legend>Basic settings</legend>
        <p><label for="">Name</label><br>
          <%= f.text_field :name, {:class=>"field size3"} %></p>

        <p><label for="">Caller ID</label><br>
          <%= f.text_field :caller_id, {:class=>"field size3"} %></p>

        <p><label for="">Script</label><br>
          <%= f.collection_select(:script_id, @scripts, :id, :name, {:prompt => true}, {:class=>"field"}) %>
        </p>

        <p><label for="">Dialing mode</label>
          <select class="field" id="campaign_predictive_type" name="campaign[predictive_type]">
            <% public_dialers = [["Predictive", "algorithm1"], ["Power x4", "power_4x"], ["Power x3", "power_3x"], ["Power x2", "power_2x"], ["Preview", "preview"],] %>
            <%= options_for_select public_dialers, ["Predictive", "algorithm1"] %>
          </select>
        </p>
        <% if !@campaign.account.recordings.blank? %>
            <p><label> <%= f.check_box :use_recordings, :onclick=>"doRecord();" %> &nbsp; Leave voicemail</label></p>

            <div id="recordingsdiv"
                 <% if  !@campaign.use_recordings? %> style="display:none;"
                 <% end %>>
              <p>Recording:</p>
              <%= f.collection_select(:recording_id, @account.recordings.active, :id, :name, {:prompt => false}, {:class=>"field", :onchange=>"updatePreview();"}) %>
              <div id="sndPreview"></div>
            </div>
        <% end %>
        <!--     <p><input type="button" class="button" value="Manage Recordings" onclick="document.location.href='/client/recording_add?campaign_id=<%= @campaign.id %>';"/></p>-->
        <p class="actions">
          <a href='/client/recording_add?campaign_id=<%= @campaign.id %>' class="action secondary">Add voicemail message</a>
        </p>
        <p>Campaign ID:  <%= "Not yet generated" %></p>
      </fieldset>
      <fieldset>
        <legend>Callers with access</legend>
        <% if @callers.length==0 %>
            <p>No callers entered.</p>
            <a href="/client/callers" class="add-button"><span>Add callers</span></a>
        <% else %>
          <div id="callers">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <th>Email</th>
                <th>&nbsp;</th>
                <th>PIN</th>
                <% if @campaign.predictive_type.index("robo,") %>
                    <th></th>
                    <th></th>
                <% end %>
              </tr>
              <tr>
                <td><input type="checkbox" value="0" id="selectAll"> All Callers</td>
                <td></td>
                <td></td>
              </tr>
              <% @callers.each do |l| %>
                  <tr>
                    <td><%= check_box_tag "campaign[caller_ids][]", "#{l.id}", callerInCampaign(l), :onclick=>"someCallers();" -%> <%= l.email %></td>
                    <td></td>
                    <td><%= l.pin %></td>
                    <% if @campaign.predictive_type.index("robo,") %>
                        <td>
                          <a href="/client/robo_session_start?caller_id=<%= l.id %>&campaign_id=<%= @campaign.id %>">start</a>
                        </td>
                        <td>
                          <a href="/client/robo_session_end?caller_id=<%= l.id %>&campaign_id=<%= @campaign.id %>">end</a>
                        </td>
                    <% end %>
                  </tr>
              <% end %>
            </table>
          </div>
        <% end %>
      </fieldset>
      <fieldset>
        <legend>Available lists</legend>
        <% if @lists.length==0 %>
            <p>You haven't uploaded any lists yet.</p>

            <% if @show_voter_buttons %>
                <a href="/client/voter_add?campaign_id=<%= @campaign.id %>" class="add-button"><span>Enter Voter</span></a>
            <% end %>
        <% else %>
        Uncheck a list to stop calling it:
            <table border="0" cellspacing="0" cellpadding="0">
              <tr>
                <th>Name</th>
                <th nowrap>Phone #s</th>
                <th>Remaining</th>
              </tr>
              <% @lists.each do |l| %>
                  <tr>
                    <td valign="top"><%= check_box_tag "voter_list_ids[]", "#{l.id}", l.enabled -%> <%= l.name %></td>
                    <td valign="top"><%= l.voters.size %></td>
                    <td valign="top"><%= Voter.find_all_by_voter_list_id_and_active(l.id, 1, :conditions=>"status= 'Not Called' or call_back=1").size %></td>
                  </tr>
              <% end %>
            </table>
            <input type="hidden" name="listsSent" value="1">

            <% if @user.id==1 && @show_voter_buttons %>
                <a href="/client/voter_add?campaign_id=<%= @campaign.id %>" class="add-button"><span>Enter Voter</span></a>
                <a href="/client/voter_view?campaign_id=<%= @campaign.id %>" class="button"><span>View Voters</span></a>
            <% end %>
        <% end %>
      </fieldset>
      <div class="buttons">
        <button type="submit">Save</button>
      </div>
    </fieldset>
<% end %>
<fieldset>
  <legend>Add Lists</legend>
  <%= render :partial => "voter_lists/new", :locals => { :path => campaign_client_voter_lists_path(@campaign) } %>
</fieldset>

<script>
    $(function () {
      $('#callers input[type="checkbox"]').attr('checked', true);
      $('#selectAll').click(function () {
       $('#callers').find(':checkbox').attr('checked', true);
      });


      $('#callers input[name^= "campaign[caller_ids]"]').change(function(){
        if ($('#callers input[name^= "campaign[caller_ids]"]:checked').length == <%= @callers.length %> ){
          $('#selectAll').attr('checked', true)
        }
        if ($('#callers input[name^= "campaign[caller_ids]"]:checked').length < <%= @callers.length %> ){
          $('#selectAll').attr('checked', false)
        }
      });


    });


    function doRecord() {
        if ($('campaign_use_recordings').checked) {
            $('recordingsdiv').style.display = 'block';
        } else {
            $('recordingsdiv').style.display = 'none';
        }
    }

    <% if !@campaign.account.recordings.blank? %>
    function updatePreview() {
        recording_id = $('campaign_recording_id').value;
    <%@user.recordings.each do |recording| %>
        if (recording_id ==<%= recording.id %>) {
            path = '<%= recording.file.url %>';
            name = '<%= escape_javascript recording.name %>';
        }
    <% end %>

        var o = 'Preview: ' + name + '<br/>';

        if (path.indexOf('mp3') > -1)
            o = o + '<object type="application/x-shockwave-flash" width="200" height="14" data="/xspf_player_slim.swf?player_title=' + name + '&song_title=' + name + '&song_url=' + escape(path) + '"><param name="movie" value="/xspf_player_slim.swf?player_title=' + name + '&song_title=' + name + '&song_url=' + escape(path) + '" /></object>';
        else
            o = o + '<EMBED SRC="' + path + '" WIDTH="240" HEIGHT = "25" AUTOPLAY="false" CONTROLLER="true" LOOP="false" PLUGINSPAGE="http://www.apple.com/quicktime/">';
        $('sndPreview').innerHTML = o;
    }
    <% end %>
    updatePreview();
</script>
