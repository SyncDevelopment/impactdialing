<%= csrf_meta_tag %>

<h1>Campaigns</h1>
<% if @campaigns.empty? %>
  <p>No campaigns entered.</p>
<% else %>
  <table>
    <tr>
      <th>Name</th>
      <th>Date added</th>
      <th width="55" class="ac"></th>
    </tr>
    <% @campaigns.each do |c| %>
      <tr>
        <td><strong><%= link_to c.name, edit_client_campaign_path(c) %></strong></td>
        <td><%= c.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= link_to '',
                client_campaign_path(c),
                :confirm => 'Are you sure you want to delete this campaign?',
                :method => :delete,
                :class => "ico del" %></td>
      </tr>
    <% end %>
  </table>
  <p><%= page_entries_info @campaigns %> <%= will_paginate @campaigns %></p>
<% end %>

<p class="actions"><%= link_to 'Add new campaign', new_client_campaign_path, :class => 'action primary' %></p>
<p class="actions"><%= link_to 'View deleted campaigns', client_deleted_campaigns_path, :class => 'action secondary' %></p>
<p class="actions"><%= link_to 'Manage Do Not Call list', blocked_numbers_path, :class => 'action secondary' %></p>
