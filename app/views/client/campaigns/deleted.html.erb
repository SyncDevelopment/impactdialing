<h1>Campaigns</h1>
<% if @campaigns.length==0 %>
  <div class="form">
    <label>No campaigns entered.</label>
  </div>
<% else %>
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Name</th>
      <th>Campaign ID</th>
      <th>Date Added</th>
      <th>Date Deleted</th>
      <th width="55" class="ac"></th>
    </tr>
    <% @campaigns.each do |c| %>
      <tr class="<%= cycle("odd","even") %>">
        <td><h3><a href="/client/campaign_view/<%= c.id %>"><%= c.name %></a></h3></td>
        <td><%= c.group_id %></td>
        <td><%= c.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= c.updated_at.strftime("%m/%d/%Y") %></td>
        <td>
          <% form_tag(client_campaign_restore_path(c), :id => "restore-campaign#{c.id}-form", :method => :put) do |f| %>
            <%= link_to 'Restore', 'javascript:void(0)', :onclick => "$('restore-campaign#{c.id}-form').submit()" %>
          <% end %>
        </td>
      </tr>
    <% end %>

  </table>

  <p><%= page_entries_info @campaigns %> <%= will_paginate @campaigns %></p>

<% end %>
<p class="actions"><%= link_to 'Return to active campaigns', '/client/campaigns', :class => 'action primary' %></p>

