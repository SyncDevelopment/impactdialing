<script>
function allCallers() {
	var f = document.forms['callerForm'].elements['campaign[caller_ids][]'];

	for(var i = 0; i < f.length; i++){
		f[i].checked = true;
	}
	
}
function someCallers() {
	$('listUse').checked=false;
	isAll();
}

function isAll(){
	var f = document.forms['callerForm'].elements['campaign[caller_ids][]'];
	var n=0;
	for(var i = 0; i < f.length; i++){
		if (f[i].checked == true)
		n++;
	}
	if (n==<%= @callers.length %>){
		$('listUse').checked=true;
	
		}
}
isAll();
</script>
