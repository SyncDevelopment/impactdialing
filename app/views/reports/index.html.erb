<h1>Reports</h1>
<% if @campaigns.length==0 %>
  <div class="form">
    <label>No campaigns exist.</label>
  </div>
<% else %>
  <div class="table">
    <table>
      <tr>
        <th>Name</th>
        <th>Reports</th>
      </tr>
      <% @campaigns.each do |c| %>
        <tr class="<%= cycle("odd","even") %>">
          <td><h3><%= link_to c.name, campaign_path(c) %></h3></td>
          <td>
            <%= link_to 'Usage', usage_reports_path(:campaign_id => c.id) %>
          </td>
          <td>
            <%= link_to 'Download Dial Details', dial_details_reports_path(:campaign_id => c) %>
          </td>
        </tr>
      <% end %>

    </table>
  </div>


<% end %>