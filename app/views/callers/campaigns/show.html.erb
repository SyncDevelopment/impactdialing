<% content_for :stylesheets do %>
    <link rel="stylesheet" type="text/css" media="screen" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/themes/smoothness/jquery-ui.css"/>
    <%= stylesheet_link_tag 'jquery.ui.datetime' %>
<% end %>
<% content_for :javascripts do %>
    <%= javascript_include_tag 'jquery.ui.datetime.min' %>
<% end %>

<%form_for([:callers,@campaign], :url => callin_callers_campaign_path(@campaign), :html=> {:class => "form", :id=>"myform", :name=>"myform"}, :method => :put) do |f|%>
    <%= f.label "Number to call :" %>
    <%= text_field :caller, :phone %>
    <%= f.submit "Call In"%>

<% end %>

