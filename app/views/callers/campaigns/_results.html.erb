<fieldset>
  <legend>Results</legend>
  <div id="result_instruction"><em>When connected, call result options will appear here.</em></div>
  <div id="response" class="rt" style="font-size:1em;">

    <% @campaign.script.questions.each do |question| %>
        <div>
          <%= question.text %>
          <%= select :question, :possible_response, question.possible_responses.collect{|pr| [pr.value, pr.id]} %>
        </div>
    <% end %>


  </div>
</fieldset>