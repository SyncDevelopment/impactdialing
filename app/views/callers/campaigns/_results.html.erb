<fieldset>
  <legend>Results</legend>
  <div id="result_instruction" style="color: #A0A0A0"><em>When connected, call result options will appear here.</em>
  </div>
  <div id="response_panel" class="rt" style="font-size : 1em;display:none">
    <form id="voter_responses" method="post">
      <input type="hidden" id="voter_id" name="voter_id">
      <% @campaign.script.try(:questions).try(:each) do |question| %>
          <p><label for><%= question.text %><br>
            <%= select :question, question.id, question.possible_responses.collect { |pr| [pr.value, pr.id] }%>
          </p>
      <% end %>
      <% @campaign.try(:script).try(:notes).try(:each) do |note| %>
          <p><label for><%= note.note %></label><br>
            <input type="text" id="note_response_<%= note.id %>" name="notes[<%= note.id %>]" class="note_text"></p>
      <% end %>
      <%= render :partial => "schedule_callback" %>  
    </form>

</div>
</div>
  </div>
</fieldset>