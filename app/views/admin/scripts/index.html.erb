<%= javascript_include_tag 'prototype' %>

<h1>Script</h1>
<% if @scripts.length==0 %>
  <div class="form">
    <label>No scripts entered.</label>
  </div>
<% else %>
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Date Added</th>
      <th>Date Deleted</th>
      <th width="55" class="ac"></th>
    </tr>
    <% @scripts.each do |s| %>
      <tr class="<%= cycle("odd","even") %>">
        <td><h3><a href="/client/script_add/<%= s.id %>"><%= s.name %></a></h3></td>
        <td><%= s.user.email %></td>
        <td><%= s.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= s.active? ? '' : s.updated_at.strftime("%m/%d/%Y") %></td>
        <td>
          <% if !s.active? %>
            <% form_tag(admin_script_restore_path(s), :id => "restore-script#{s.id}-form", :method => :put) do |f| %>
              <%= link_to 'Restore', 'javascript:void(0)', :onclick => "$('restore-script#{s.id}-form').submit()" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <p><%= page_entries_info @scripts %> <%= will_paginate @scripts %></p>
<% end %>

