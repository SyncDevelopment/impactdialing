<h1>Admin Reporting</h1>

Report Date Range:
<%= form_tag ("/admin/report") do %>
  <table>
    <tr>
      <td>From:</td>
      <td><input class="format-m-d-y divider-slash" id="from_date" name="from_date" type="text" value="<%= @from_date.strftime("%m/%d/%Y") %>"></td>
    </tr>
    <tr>
      <td>
        To:</td>
      <td><input class="format-m-d-y divider-slash" id="from_date" name="to_date" type="text" value="<%= @to_date.strftime("%m/%d/%Y") %>"></td>
    </tr>
  </table>  <button type="submit">Show results</button>
<% end %>

<br/>
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th>Account ID</th>
    <th>Account Email</th>
    <th>Callers</th>
    <th>Calls</th>
    <th>Transfers</th>
    <th>Total</th>
  </tr>

  <% @output.each do |r| %>
    <% account=r["account"] %>
    <% calls=r["calls"] %>
    <% sessions=r["sessions"] %>
    <% transfers=r["transfers"] %>
    <tr class="<%= cycle("odd","even") %>">
      <td><%= account.id %></td>
      <td><%= account.users.first.email %></td>
      <td><%= sessions %></td>
      <td><%= calls %></td>
      <td><%= transfers %></td>
    <td><%= sessions + calls + transfers %></td>
    </tr>
  <% end %>
</table>
