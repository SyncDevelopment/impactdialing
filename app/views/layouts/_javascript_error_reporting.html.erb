    Bugsnag.user = {
      id: "<%= @user.id %>",
      email: "<%= @user.email %>",
      account_id: "<%= @user.account_id %>"
    };
    Bugsnag.releaseStage = "<%= standard_env_name %>"
  </script>
  <%= content_for :javascripts do %>
    $(document).ajaxError(function(event, jqhxr, settings, thrownError){
      Bugsnag.notify("Ajax Error", thrownError);
    });
  <% end %>
<% end %>
