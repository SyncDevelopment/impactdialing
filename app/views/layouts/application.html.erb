<link rel="stylesheet" media="only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)" href="/css/2x.css?v=1">


<%= render :partial => "layouts/errorception" %>
<%= render :partial => "layouts/kissmetrics" %>
<%= javascript_include_tag :jdefaults %>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag 'application' %>
<%= javascript_include_tag 'nested_form' %>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
<%= yield :stylesheets %>
<%= stylesheet_link_tag "application", "caller", "jquery-ui-1.8.14.custom" %>
<%= yield :jquery_extension_javascripts %>
<%= yield :javascripts %>

<!-- JavaScript at bottom except for Modernizr -->
<script src="/js/libs/modernizr-custom.js"></script>

<!-- For iPhone 4 -->
<link rel="apple-touch-icon-precomposed" sizes="114x114" href="/img/h/apple-touch-icon.png">
<!-- For iPad 1-->
<link rel="apple-touch-icon-precomposed" sizes="72x72" href="/img/m/apple-touch-icon.png">
<!-- For iPhone 3G, iPod Touch and Android -->
<link rel="apple-touch-icon-precomposed" href="/img/l/apple-touch-icon-precomposed.png">
<!-- For Nokia -->
<link rel="shortcut icon" href="/img/l/apple-touch-icon.png">
<!-- For everything else -->
<link rel="shortcut icon" href="/favicon.ico">

<!--iOS. Delete if not required -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<link rel="apple-touch-startup-image" href="/img/splash.png">

<!--Microsoft. Delete if not required -->
<meta http-equiv="cleartype" content="on">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<!-- http://t.co/y1jPVnT -->
<link rel="canonical" href="/">

</head>

<body class="admin clearfix">
<header role="banner" class="clearfix">
<h1 class="<%= domain %>"><a href="<% if logged_in_as_client? %>/client<% else %>/caller<% end %>"><%= title %></a></h1>

<% if logged_in_as_client? %>
  <ul class="clearfix">
    <li><a href="/client/logout">Log out</a></li>
  </ul>
<% end %>

</header>

<% if logged_in_as_client? %>
  <nav role="navigation" class="clearfix">
  <ul class="clearfix">
    <% if @user.administrator? %>
      <li><a href="/client/scripts">Scripts</a></li>
      <li><a href="/client/campaigns">Campaigns</a></li>
      <li><a href="/client/callers">Callers</a></li>
    <% end %>
    <li><a href="/client/monitors"><span>Monitor</a></li>
    <li><a href="/client/reports"><span>Reports</a></li>
    <li><a href="/client/user_add">Account</a></li>
  </ul>
  </nav>
<% end %>

<%= render :partial => "layouts/flash_messages", :locals => {:display => [:notice, :error, :warning]} %>

<div class="content clearfix">
  <%= yield %>
</div>

<footer role="contentinfo" class="clearfix">

<% if logged_in_as_caller? %>
  <p style="float:right"><a href="/caller/logout">Log out</a></p>
<% end %>

<% if logged_in_as_phones_only_caller? %>
  <p style="float:right"><a href="/callers/phones_only/logout">Log out</a></p>
<% end %>

<% if logged_in_as_client? %>
  <ul>
    <% if @user.administrator? %>
      <li><a href="/client/scripts">Scripts</a></li>
      <li><a href="/client/campaigns">Campaigns</a></li>
      <li><a href="/client/callers">Callers</a></li>
    <% end %>
    <li><a href="/client/monitors"><span>Monitor</a></li>
    <li><a href="/client/reports"><span>Reports</a></li>
  </ul>

  <div>
    <p class="vcard">Need help? <span class="tel"><%= phone %></span><a href="mailto:<%= email %>"><%= email %></a></p>
  </div>
<% end %>

<p>
<ul class="clearfix">
  <li class='divider'>&#169; 2012</li>
  <li class='divider'>
    <%= link_to "Privacy", "#{client_policies_path}#privacy" %>
  </li>
  <li>
    <%= link_to "Terms", "#{client_policies_path}#terms" %>
  </li>
</ul>
</p>

</footer>
</body>
</html>
