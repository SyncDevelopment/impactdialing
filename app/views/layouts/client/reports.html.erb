<head>
  <meta charset="utf-8">

  <title><%= title %></title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- http://t.co/dKP3o1e -->
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="viewport" content="width=device-width, target-densitydpi=160dpi, initial-scale=1">

  <!-- For all browsers -->
  <link rel="stylesheet" media="screen" href="/css/style.css?v=1.1">
  <link rel="stylesheet" media="print" href="/css/print.css?v=1">
  <!-- For progressively larger displays -->
  <link rel="stylesheet" media="only screen and (min-width: 480px)" href="/css/480.css?v=1">
  <link rel="stylesheet" media="only screen and (min-width: 768px)" href="/css/768.css?v=1">
  <link rel="stylesheet" media="only screen and (min-width: 992px)" href="/css/992.css?v=1">
  <link rel="stylesheet" media="only screen and (min-width: 1382px)" href="/css/1382.css?v=1">
  <!-- For Retina displays -->
  <link rel="stylesheet" media="only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (-o-min-device-pixel-ratio: 3/2), only screen and (min-device-pixel-ratio: 1.5)" href="/css/2x.css?v=1">


  <%= render :partial => "layouts/errorception" %>
  <% if logged_in_as_client? and not Rails.env.test? and not Rails.env.development? %>
    <%= render :partial => "layouts/olark" %>
  <% end %>

  <%= yield :stylesheets %>
  <%= stylesheet_link_tag "application", "caller", "jquery-ui-1.8.14.custom", 'intro.min' %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag :defaults %>
  <%= yield :meta %>

  <!-- JavaScript at bottom except for Modernizr -->
  <script src="/js/libs/modernizr-custom.js"></script>

  <!-- For iPhone 4 -->
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/img/h/apple-touch-icon.png">
  <!-- For iPad 1-->
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/img/m/apple-touch-icon.png">
  <!-- For iPhone 3G, iPod Touch and Android -->
  <link rel="apple-touch-icon-precomposed" href="/img/l/apple-touch-icon-precomposed.png">
  <!-- For Nokia -->
  <link rel="shortcut icon" href="/img/l/apple-touch-icon.png">
  <!-- For everything else -->
  <link rel="shortcut icon" href="/favicon.ico">

  <!--iOS. Delete if not required -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <link rel="apple-touch-startup-image" href="/img/splash.png">

  <!--Microsoft. Delete if not required -->
  <meta http-equiv="cleartype" content="on">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <!-- http://t.co/y1jPVnT -->
  <link rel="canonical" href="/">

  </head>

  <body class="admin clearfix">
    <header role="banner" class="clearfix">
      <%= render 'layouts/client_logo' %>

      <% if logged_in_as_client? %>
        <ul class="clearfix">
          <li><button onclick="javascript:introJs().start();" class="action secondary">Help</button></li>
          <li>
            <% if session[:internal_admin] %>
            <span style="font-size: 90%">Logged-in as <%= @user.lname %> (Acct #<%= @user.account_id %>)</span><br>
            <% end %>
            <%= link_to 'Log out', client_session_path, :method => :delete %>
          </li>
        </ul>
      <% end %>
    </header>

    <% if logged_in_as_client? %>
      <nav role="navigation" class="clearfix">
      <ul class="clearfix">
        <li><a href="/client/monitors" <%= content_for :monitor_data %>>Dashboard</a></li>
        <% if @user.administrator? %>
          <li><a href="/client/scripts" <%= content_for :scripts_data %>>Scripts</a></li>
          <li><a href="/client/campaigns" <%= content_for :campaigns_data %>>Campaigns</a></li>
          <li><a href="/client/callers" <%= content_for :callers_data %>>Callers</a></li>
        <% end %>
        <li><a href="/client/reports" <%= content_for :reports_data %>>Reports</a></li>
        <li><a href="/client/account" <%= content_for :account_data %>>Account</a></li>
      </ul>
      </nav>
    <% end %>

    <%= render :partial => "layouts/flash_messages", :locals => {:display => [:notice, :error, :warning]} %>

    <div class="content clearfix">
      <%= yield %>
    </div>

    <footer role="contentinfo" class="clearfix">

    <% if logged_in_as_client? %>
      <ul>
        <li><a href="/client/monitors">Dashboard</a></li>
        <% if @user.administrator? %>
          <li><a href="/client/scripts">Scripts</a></li>
          <li><a href="/client/campaigns">Campaigns</a></li>
          <li><a href="/client/callers">Callers</a></li>
        <% end %>
        <li><a href="/client/reports">Reports</a></li>
      </ul>

      <div>
        <p class="vcard">
          Need help? <span class="tel"><%= phone %></span>
          <a href="mailto:<%= email %>"><%= email %></a>
        </p>
      </div>
    <% end %>

    <%= render 'layouts/legal' %>

    </footer>
    <% if logged_in_as_client? %>
    <script type="text/javascript">
      var _usersnapconfig = {
        apiKey: '00d43adb-86c0-47cb-a279-9e90d8695996',
        emailBox: true,
        emailBoxValue: '<%= @user.email %>',
        emailRequired: true,
        beforeSend: function(obj) {
          obj.addInfo = {
            account_id: '<%= @user.account_id %>'
          }
        }
      };
      (function() {
        var s = document.createElement("script");
        s.type = "text/javascript";
        s.async = true;
        s.src = '//api.usersnap.com/beta/'+
                '00d43adb-86c0-47cb-a279-9e90d8695996.js';
        var x = document.getElementsByTagName('head')[0];
        x.appendChild(s);
      })();
    </script>
    <% end %>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/jquery-ui.min.js"></script>
    <%= javascript_include_tag 'application', 'intro.min' %>
    <%= yield :javascripts %>
  </body>
</html>
