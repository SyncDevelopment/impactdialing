<body class="admin clearfix">

<header role="banner" class="clearfix">
<h1 class="<%= domain %>"><a href="<% if client_controller?(@controllerName) %>/broadcast<% else %>/caller<% end %>"><%= title %></a></h1>

<% if logged_in_as_client? %>
  <ul class="clearfix">
    <li class='divider'><%=link_to 'Help', :controller =>'broadcast', :action=>'index' %></li>
    <li class='divider'><%=link_to 'Account',:controller => 'broadcast', :action => 'user_add' %></li>
    <li><%=link_to 'Log out', :action=>'logout' %></li>
  </ul>
<% elsif logged_in_as_caller? %>
  <ul class='clearfix'>
    <li class='divider'><a href="/caller" class='divider'>Home</a></li>
    <li><a href="/caller/logout">Log out</a></li>
  </ul>
<% end %>

</header>

<% if client_controller?(@controllerName) %>
<nav role="navigation" class="clearfix">
<ul class="clearfix">
	<!--<li><a href="/client" <% if @actionName=="index" %>class="active"<% end %>><span>Welcome</span></a></li>-->
    <li><%= link_to content_tag(:span, 'Scripts'), scripts_path, :class => @controllerName.index('script') ? 'active' : '' %></li>
    <li><%= link_to content_tag(:span, 'Campaigns'), campaigns_path, :class => @controllerName.index('campaigns') ? 'active' : '' %></li>
    <li><%= link_to content_tag(:span, 'Control'), control_campaigns_path, :class => @control_campaigns_active ? 'active' : '' %></li>
    <li><%= link_to content_tag(:span, 'Reports'), reports_path, :class => @control_campaigns_active ? 'active' : '' %></li>
    <li><a href="/client" >Predictive Dialer</a></li> 
</ul>
</nav>
<% end %>

<%= render :partial => "shared/client_flash_messages", :locals => {:display => [:notice, :error, :warning]} %>

<div class="content clearfix">
	<%= yield %>
 	<%= yield :sidebar %>
</div>


<footer role="contentinfo" class="clearfix">
<% if client_controller?(@controllerName) %>
<ul>
    <li><%= link_to content_tag(:span, 'Scripts'), scripts_path, :class => @controllerName.index('script') ? 'active' : '' %></li>
    <li><%= link_to content_tag(:span, 'Campaigns'), campaigns_path, :class => @controllerName.index('campaigns') ? 'active' : '' %></li>
    <li><%= link_to content_tag(:span, 'Control'), control_campaigns_path, :class => @control_campaigns_active ? 'active' : '' %></li>
    <li><%= link_to content_tag(:span, 'Reports'), reports_path, :class => @control_campaigns_active ? 'active' : '' %></li>
</ul>
<% end %>
<div>
  <p class="vcard">Need help? <span class="tel"><%= phone %></span> or <a href="mailto:<%= email %>"><%= email %></a></p>
</div>
<p> 
<ul class="clearfix"> 
  <li class='divider'>&#169; 2011</li> 
  <li class='divider'><a href="/policies#privacy">Privacy</a></li> 
  <li><a href="/policies#terms">Terms</a></li> 
</ul> 
</p>
</footer>

