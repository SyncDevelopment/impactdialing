<h1>Control</h1>
<div id="running_list">
  <%= render :partial => 'control_list', :locals => {:campaigns => @campaigns} %>
</div>
<script type='text/javascript'>
    $(document).ready(function(){
        setInterval(refreshCampaignStatus, 10 * 1000);

        function refreshCampaignStatus() {
            $("#running_list").load("<%= running_status_campaigns_path %>");
        }

    })
</script>