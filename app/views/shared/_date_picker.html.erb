<h3>Date range:</h3>
<% form_tag (url) do %>
    <table>
      <tr>
        <td>From:</td>
        <td> <%= unobtrusive_date_text_picker_tag :from_date, @from_date %> </td>
      </tr>
      <tr>
        <td>To:</td>
        <td>
          <%= unobtrusive_date_text_picker_tag :to_date, @to_date %>
        </td>
      </tr>
    </table>
    <div class="buttons">
      <button type="submit">Update</button>
    </div>
<% end %>
