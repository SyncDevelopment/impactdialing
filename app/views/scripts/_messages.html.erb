<%messages||=[] %>
<% if messages.length==0 %>
    <div class="form">
      <label>No messages entered.</label>
    </div>
<% else %>
    <div class="table">
      <table>
        <tr>
          <th>Name</th>
          <th>Date added</th>
          <th width="55" class="ac"></th>
        </tr>
        <% messages.each do |c| %>
            <tr class="<%= cycle("odd","even") %>">
              <td><h3><%= link_to c.name, c.for_voicemail? ? message_path(c) : script_path(c) %></h3></td>
              <td><%= c.created_at.strftime("%m/%d/%Y") %></td>
              <td><a href="javascript:if(<%=messages.try(:length) %>== 1) alert('You must have at least one script.'); else if(confirm('Are you sure you want to delete this script?')) document.location.href='/client/script_delete/<%= c.id %>';" class="ico del">Delete</a>
              </td>
            </tr>
        <% end %>

      </table>
    </div>

    <p><%= page_entries_info messages %> <%= will_paginate messages %></p>

<% end %>