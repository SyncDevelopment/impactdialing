<h1>Interactive Messages</h1>
<% if @scripts.length==0 %>
  <div class="form">
    <label>No messages entered.</label>
  </div>
<% else %>
  <div class="table">
    <table>
      <tr>
        <th>Name</th>
        <th>Date added</th>
        <th width="55" class="ac"></th>
      </tr>
      <% @scripts.each do |c| %>
        <tr class="<%= cycle("odd","even") %>">
          <td><h3><%= link_to c.name, script_path(c) %></h3></td>
          <td><%= c.created_at.strftime("%m/%d/%Y") %></td>
          <td><a href="javascript:if(<%=@scripts.try(:length) %>== 1) alert('You must have at least one script.'); else if(confirm('Are you sure you want to delete this script?')) document.location.href='/client/script_delete/<%= c.id %>';" class="ico del">Delete</a>
          </td>
        </tr>
      <% end %>

    </table>
  </div>

  <p><%= page_entries_info @scripts %> <%= will_paginate @scripts %></p>

<% end %>
<p class="actions">
  <%= link_to 'Add interactive message', new_script_path, :class => 'action primary' %>
  <%= link_to 'Add new message', new_message_path, :class => 'action primary' %>
</p>
<p class="actions"><%= link_to 'View deleted messages', client_deleted_scripts_path, :class => 'action secondary' %></p>
