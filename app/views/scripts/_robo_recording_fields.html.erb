<div class="fields">
  <fieldset>
    <legend>Recording</legend>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <fieldset>
      <legend>Audio</legend>

      <% if f.object.file.exists? %>
          <div>
            <embed type="application/x-shockwave-flash" wmode="transparent" height="27" width="320"
                   src="http://www.google.com/reader/ui/3523697345-audio-player.swf?audioUrl=<%= f.object.file.url %>"/>
          </div>
      <% end %>
      <p><%= f.file_field :file %></p>

      <p>You can upload an MP3, WAV, or AIFF file.</p>
    </fieldset>
    <!--DO NOT EDIT-->
    <fieldset>
      <legend>Responses</legend>
      <div class="fields">
        <table class="fields">
          <tr>
            <th width="30%">Response</th>
            <th width="30%">Keypad</th>
            <th>Delete</th>
          </tr>
        </table>
      </div>

      <%= f.fields_for :recording_responses do |response_form| %>
          <%= render :partial=>"recording_response_fields", :locals => {:f => response_form} %>
      <% end %>
      <p class="actions"><%= f.link_to_add "Add response", :recording_responses, :class => "action secondary" %></p>
    </fieldset>

    <p class="actions"><%= f.link_to_remove "Remove this recording", :class => "action secondary" %></p>
    <!--DO NOT EDIT-->
  </fieldset>
</div>

